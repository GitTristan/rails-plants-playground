<%= form_for [@plant, @recipe], html: {class: "form-horizontal"} do |f| %>
  <div class="form-group">
    <%= f.label :recipe_name, "Recipe Name", class: 'col-md-2 control-label' %>
    <div class='col-md-6'>
      <%= f.text_field :recipe_name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :part, class: 'col-md-2 control-label' %>
    <div class='col-md-6'>
      <%= f.text_field :part, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :recipe_purpose, class: 'col-md-2 control-label' %>
    <div class='col-md-6'>
      <%= f.collection_select(:recipe_purpose, [], :id, :, {prompt: "please select a purpose..."},{class: 'form-control'}) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :ingredients, class: 'col-md-2 control-label' %>
    <div class='col-md-6'>
      <%= f.text_field :ingredients, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :prep_time, class: 'col-md-2 control-label' %>
    <div class='col-md-6'>
      <%= f.text_field :prep_time, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :total_time, class: 'col-md-2 control-label' %>
    <div class='col-md-6'>
      <%= f.text_field :total_time, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :directions, class: 'col-md-2 control-label' %>
    <div class='col-md-6'>
      <%= f.text_field :directions, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%= f.submit button_name, class: 'btn btn-success' %>
    </div>
  </div>
<% end %>
